<!-- addcertificate.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Certificate</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    
    <link rel="stylesheet" href="/css/color-1.css" class="alternative-style" title="color-1">
    <link rel="stylesheet" href="/css/color-2.css" class="alternative-style" title="color-2" disabled>
    <link rel="stylesheet" href="/css/color-3.css" class="alternative-style" title="color-3" disabled>
    <link rel="stylesheet" href="/css/color-4.css" class="alternative-style" title="color-4" disabled>
    <link rel="stylesheet" href="/css/color-5.css" class="alternative-style" title="color-5" disabled>
    <link rel="stylesheet" href="/css/style-switcher.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Clicker+Script&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
    </style>
    <link rel="stylesheet" href="path/to/font-mfizz/font-mfizz.css">
    <link rel="stylesheet" href="/css/add.css">
</head>
<body class="dark">
    <div class="main-container">
        {{>left}}
        <div class="right-side">
            <h1>Certificate Details</h1>
            <form action="/addcertificate" method="POST">
                <div class="form-group">
                    <label for="icon">Icon URL:</label>
                    <input placeholder="Enter Icon URL" type="text" id="icon" name="icon" required>
                </div>
                <div class="form-group">
                    <label for="url">Certificate URL:</label>
                    <input placeholder="Enter Certificate URL" type="text" id="url" name="url" required>
                </div>
                <div class="form-group">
                    <label for="name">Certificate Name:</label>
                    <input placeholder="Enter Certificate Name"  type="text" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="ppturl">PPT URL (optional):</label>
                    <input placeholder="Enter PPT URL"  type="text" id="ppturl" name="ppturl">
                </div>
                <div class="form-group">
                    <label for="pptname">PPT Name (optional):</label>
                    <input placeholder="Enter PPT Name"  type="text" id="pptname" name="pptname">
                </div>
                <button type="submit">Add Certificate</button>
            </form>
        </div>
        {{>theme}}
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.1.0/typed.umd.js" integrity="sha512-+2pW8xXU/rNr7VS+H62aqapfRpqFwnSQh9ap6THjsm41AxgA0MhFRtfrABS+Lx2KHJn82UOrnBKhjZOXpom2LQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/script/script.js"></script>
    <script src="/script/style-switcher.js"></script>
</body>
</html>
